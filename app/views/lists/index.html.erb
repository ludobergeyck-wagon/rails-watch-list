<% if false %>
  <h1>My lists</h1>
  <ul>
    <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list), class: "list-link" %></li>
    <% end %>
  </ul>
  <%= link_to "Create", new_list_path, class: "btn btn-primary" %>
<% end %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 fw-bold text-primary">My Lists</h1>

        <%= link_to new_list_path, class: "btn btn-primary btn-lg shadow-sm" do %>
          <i class="bi bi-plus-circle me-2"></i>
          Create New List
        <% end %>
      </div>

      <!-- Lists Card -->
      <div class="card shadow-sm border-0">
        <div class="card-body p-0">
          <% if @lists.any? %>
            <ul class="list-group list-group-flush">
              <% @lists.each do |list| %>
                <li class="list-group-item list-item-hover">
                  <%= link_to list_path(list), class: "list-link d-flex justify-content-between align-items-center text-decoration-none" do %>
                    <span class="fs-5">
                      <i class="bi bi-list-ul text-primary me-3"></i>
                      <%= list.name %>
                    </span>

                    <i class="bi bi-chevron-right text-muted"></i>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-inbox display-1 text-muted"></i>

              <p class="text-muted mt-3 fs-5">
                No lists yet. Create your first one!
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Image de fond de salle de cinéma */
body {
  background-image: url('https://images.pexels.com/photos/7991579/pexels-photo-7991579.jpeg?auto=compress&cs=tinysrgb&w=1920');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-attachment: fixed;
  position: relative;
  min-height: 100vh;
}

/* Overlay sombre pour améliorer la lisibilité */
body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: -1;
}

.container {
  position: relative;
  z-index: 1;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
}

h1 {
  color: #ffd700;
  text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.9), 0 0 20px rgba(255, 215, 0, 0.5);
  font-weight: 700;
}

.text-primary {
  color: #dc143c !important;
}

.list-item-hover {
  transition: all 0.3s ease;
  border-left: 4px solid transparent;
}

.list-item-hover:hover {
  background-color: #fff3f3;
  transform: translateX(8px);
  border-left-color: #dc143c;
}

.list-link {
  color: #212529;
  padding: 0.75rem 0;
  display: block;
}

.list-link:hover {
  color: #dc143c;
}

.list-link i.bi-chevron-right {
  transition: transform 0.3s ease;
}

.list-link:hover i.bi-chevron-right {
  transform: translateX(8px);
  color: #dc143c;
}

.list-link i.bi-list-ul {
  color: #dc143c;
}

.btn-primary {
  background: linear-gradient(135deg, #dc143c 0%, #8b0000 100%);
  border: none;
  border-radius: 10px;
  padding: 0.75rem 1.5rem;
  transition: all 0.3s ease;
  font-weight: 600;
  box-shadow: 0 4px 15px rgba(220, 20, 60, 0.4);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 20px rgba(220, 20, 60, 0.6);
  background: linear-gradient(135deg, #ff1744 0%, #dc143c 100%);
}

.text-muted {
  color: #6c757d !important;
}

.bi-inbox {
  color: #dc143c !important;
}
</style>
